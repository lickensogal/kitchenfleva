# -----------------------------------------------------------------------------
# KitchenFleva - Environment Configuration
# Replace the SAMPLE_... values with your real credentials before deploying.
# Keep this file secret. Do NOT commit real secrets to a public repo.
# Use .env.example (safe values) for sharing.
# -----------------------------------------------------------------------------

# NODE / APP
NODE_ENV=development
PORT=5173
PUBLIC_URL=http://localhost:5173

# SITE
SITE_NAME="Kitchen Fleva"
SITE_URL=http://localhost:5173
ADMIN_EMAIL=you@yourdomain.com

# SUPABASE (client + service role where applicable)
SUPABASE_URL=https://SAMPLE-supabase-project.supabase.co
SUPABASE_ANON_KEY=SAMPLE_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=SAMPLE_SUPABASE_SERVICE_ROLE_KEY

# SUPABASE STORAGE BUCKET (optional default)
SUPABASE_STORAGE_BUCKET=public

# SMTP (for transactional emails: sendEmail function)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM="Kitchen Fleva <no-reply@yourdomain.com>"

# M-PESA (Safaricom)
MPESA_CONSUMER_KEY=SAMPLE_MPESA_CONSUMER_KEY
MPESA_CONSUMER_SECRET=SAMPLE_MPESA_CONSUMER_SECRET
MPESA_SHORTCODE=SAMPLE_SHORTCODE
MPESA_PASSKEY=SAMPLE_PASSKEY
MPESA_ENV=sandbox   # sandbox or production
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/mpesa/callback

# STRIPE
STRIPE_SECRET_KEY=SAMPLE_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=SAMPLE_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=SAMPLE_STRIPE_WEBHOOK_SECRET

# PAYPAL
PAYPAL_CLIENT_ID=SAMPLE_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=SAMPLE_PAYPAL_CLIENT_SECRET
PAYPAL_MODE=sandbox   # sandbox or live

# PAYSTACK
PAYSTACK_SECRET_KEY=SAMPLE_PAYSTACK_SECRET_KEY
PAYSTACK_PUBLIC_KEY=SAMPLE_PAYSTACK_PUBLIC_KEY
PAYSTACK_CALLBACK_URL=https://your-domain.com/api/payments/paystack/callback

# FLUTTERWAVE
FLW_PUBLIC_KEY=SAMPLE_FLW_PUBLIC_KEY
FLW_SECRET_KEY=SAMPLE_FLW_SECRET_KEY
FLW_ENCRYPTION_KEY=SAMPLE_FLW_ENCRYPTION_KEY
FLW_CALLBACK_URL=https://your-domain.com/api/payments/flutterwave/callback

# RAZORPAY
RAZORPAY_KEY_ID=SAMPLE_RAZORPAY_KEY_ID
RAZORPAY_KEY_SECRET=SAMPLE_RAZORPAY_KEY_SECRET
RAZORPAY_WEBHOOK_SECRET=SAMPLE_RAZORPAY_WEBHOOK_SECRET

# OTHER PAYMENT / CARD PROCESSING
CARD_GATEWAY_TOKENIZATION_KEY=SAMPLE_TOKEN_KEY

# AI / THIRD-PARTY (optional)
# For example, if using a 3rd-party model provider or Gemini proxy
AI_PROVIDER_API_KEY=SAMPLE_AI_PROVIDER_KEY

# ANALYTICS / MONITORING (optional)
SENTRY_DSN=SAMPLE_SENTRY_DSN

# SECURITY / APP SECRETS
APP_JWT_SECRET=SAMPLE_APP_JWT_SECRET
COOKIE_SECRET=SAMPLE_COOKIE_SECRET

# BACKUPS / STORAGE (optional)
S3_BUCKET_NAME=SAMPLE_S3_BUCKET
S3_ACCESS_KEY_ID=SAMPLE_AWS_KEY
S3_SECRET_ACCESS_KEY=SAMPLE_AWS_SECRET
S3_REGION=us-east-1

# Misc
DEFAULT_LANGUAGE=en
ALLOW_SIGNUPS=true
MAINTENANCE_MODE=false
